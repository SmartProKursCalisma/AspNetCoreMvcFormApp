@model List<Personel>

<div class="container">
    <div class="row">

        <div class="col-md-12">

            <table class="table-success table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Aktif</th>
                        <th>Aksiyon</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Fullname</td>
                            <td>@item.Email</td>
                            <td>@item.IsActive</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-action="RemovePersonel" asp-controller="Home" asp-route-id="@item.Id">Sil</a>
                                <a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="UpdatePersonel" asp-route-id="@item.Id">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <a asp-action="AddPersonel" asp-controller="Home" class="btn btn-success mb-2">Yeni Personel Ekle</a>

    </div>
</div>